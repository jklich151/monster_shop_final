<h1> All Discounts </h1>

<% @discounts.each do |discount| %>
<section id="discount<%=discount.id%>">
<%= discount.name %>
Percentage: <%= discount.percentage_off %>
Minimum Quantity: <%= discount.minimum_quantity %>
<%= link_to "Edit Discount", "/merchant/discounts/#{discount.id}/edit" %>
<%= link_to "Delete Discount", "/merchant/discounts/#{discount.id}", method: :delete %>
</section>
<% end %>

<%= link_to "New Discount", "/merchant/discounts/new" %>
